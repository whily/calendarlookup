<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory
      android:title="@string/appearance_preference">
    <ListPreference 
        android:key="theme_preference"
        android:title="@string/theme_title_preference" 
        android:summary="%s"
        android:entries="@array/theme_entries_preference" 
        android:entryValues="@array/theme_values_preference"
        android:dialogTitle="@string/theme_dialog_title_preference"
        android:persistent="true"   
        android:defaultValue="0"
        android:shouldDisableView="false" />
    <ListPreference 
        android:key="language_preference"
        android:title="@string/language_title_preference" 
        android:summary="%s"
        android:entries="@array/language_entries_preference" 
        android:entryValues="@array/language_values_preference"
        android:dialogTitle="@string/language_dialog_title_preference"
        android:persistent="true" 
        android:defaultValue="0"
        android:shouldDisableView="false" />         
  </PreferenceCategory>
</PreferenceScreen>
